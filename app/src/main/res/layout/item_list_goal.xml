<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_goal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TITULO"
        android:id="@+id/text_title_goal"
        android:layout_alignTop="@+id/image_goal"
        android:layout_toRightOf="@+id/image_goal"
        android:layout_toEndOf="@+id/image_goal"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R$"
        android:id="@+id/text_R$"
        android:layout_below="@+id/text_title_goal"
        android:layout_toRightOf="@+id/image_goal"
        android:layout_toEndOf="@+id/image_goal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Atual"
        android:id="@+id/text_status_goal"
        android:layout_below="@+id/text_R$"
        android:layout_toRightOf="@+id/image_goal"
        android:layout_toEndOf="@+id/image_goal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="500,00"
        android:id="@+id/text_value_goal"
        android:layout_alignTop="@+id/text_R$"
        android:layout_toRightOf="@+id/text_R$"
        android:layout_toEndOf="@+id/text_R$" />

</RelativeLayout>