<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/galleryItem"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/top_bottom_margim"
        android:layout_marginTop="@dimen/top_bottom_margim"
        android:paddingLeft="9dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="8dp"
        android:src="@drawable/background_gallery"
        android:background="@drawable/image_background"/>

    <LinearLayout
        android:id="@+id/background_comment"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="top"
        android:background="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="72dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentTextView"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_below="@+id/galleryItem"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>