<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/goalPagerItemImageView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/top_bottom_margim"
        android:layout_marginTop="@dimen/top_bottom_margim"
        android:paddingLeft="9dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="8dp"
        android:src="@drawable/background_gallery"
        android:background="@drawable/image_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goalPagerItemTextView"
        android:layout_weight="0.01"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/metaPagerItemTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/button_default_bottom_margim"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showGoalImageButton"
        android:src="@drawable/btn_strip"
        android:background="@drawable/sel_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/button_ring_left_margim"
        android:layout_marginTop="@dimen/button_default_top_margim"/>
</RelativeLayout>