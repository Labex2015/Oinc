<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="ComentÃ¡rio"
        style="@style/CustomTitleComments"
     />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shp_border_comment">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/messagePictureEditText"
            android:layout_marginTop="16px"
            android:focusable="true"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_default_style"
                android:text="@string/back"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/button_default_rigth_margim"
                android:layout_gravity="bottom" />

            <Button
                android:id="@+id/confirmCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_default_style"
                android:text="@string/confirm"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>